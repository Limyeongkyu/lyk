<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.lyk.persistence.BoardMapper">

	<select id="read" resultType="org.lyk.domain.BoardVO">
		select * from tbl_board order by bno desc limit #{page},10
	</select>
	
	<select id="totalCount" resultType ="int">
	select count(*) from tbl_board
	</select>

	<insert id="create">
	insert into tbl_board(writer,content,title)
	values (#{writer},#{content},#{title})
	</insert>
	
	<select id="view" resultType="org.lyk.domain.BoardVO">
	select * from tbl_board where bno= #{bno}
	</select>
	
	<update id="update">
	update tbl_board set
		writer = #{writer},
		content =
		#{content},
		title= #{title},
		modifydate = now()
		where bno = #{bno}
	</update>
	
	<delete id="delete">
		delete from tbl_board where bno = #{bno}
	</delete>
	</mapper>